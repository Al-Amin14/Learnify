@page
@model Learnify.Areas.Identity.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container py-5">
    <div class="row align-items-center">

        <div class="col-md-6 mb-4">
            <h1 class="display-4 text-primary fw-bold">Welcome to Learnify!</h1>
            <p class="lead text-muted mb-4">
                Your platform for interactive learning. Access courses, tutorials, and resources to master new skills and advance your career.
            </p>

            @if (!User.Identity.IsAuthenticated)
            {
                <a href="/Identity/Account/Register" class="btn btn-lg me-2"
                   style="background: linear-gradient(90deg, #6a11cb 0%, #2575fc 100%); color: #fff; border:none; border-radius: 50px; padding: 0.75rem 2rem;">
                    Get Started
                </a>
                <a href="/Identity/Account/Login" class="btn btn-outline-primary btn-lg" style="border-radius: 50px; padding: 0.75rem 2rem;">
                    Login
                </a>
            }
            else
            {
                <p class="fw-bold text-success">Hello @User.Identity.Name! You are logged in.</p>
                <a href="/Courses" class="btn btn-lg" style="background: linear-gradient(90deg, #6a11cb 0%, #2575fc 100%); color: #fff; border:none; border-radius: 50px; padding: 0.75rem 2rem;">
                    Explore Courses
                </a>
            }
        </div>

     
        <div class="col-md-6 text-center mb-4">
            <img src="~/images/learnify-logo.png" alt="Learnify Logo" class="img-fluid rounded shadow" style="max-height: 350px;">
        </div>
    </div>
</div>


<div class="container py-5">
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm rounded-4 p-4 h-100">
                <h4 class="text-primary mb-3">Interactive Courses</h4>
                <p class="text-muted">Learn at your own pace with interactive lessons and quizzes designed for engagement.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm rounded-4 p-4 h-100">
                <h4 class="text-primary mb-3">Expert Instructors</h4>
                <p class="text-muted">Learn from industry professionals with real-world experience in their fields.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm rounded-4 p-4 h-100">
                <h4 class="text-primary mb-3">Certifications</h4>
                <p class="text-muted">Earn certificates for your completed courses to showcase your skills and achievements.</p>
            </div>
        </div>
    </div>
</div>


<div class="container py-5 text-center">
    <h3 class="text-primary mb-3">Ready to start learning?</h3>
    <a href="/Identity/Account/Register" class="btn btn-lg shadow"
       style="background: linear-gradient(90deg, #6a11cb 0%, #2575fc 100%); color: #fff; border:none; border-radius: 50px; padding: 0.75rem 2rem;">
        Join Learnify Today
    </a>
</div>
