<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Learnify</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Learnify.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />

    <style>
        .navbar-gradient {
            background: linear-gradient(90deg, #4A00E0, #8E2DE2);
            box-shadow: 0 4px 12px rgba(74, 0, 224, 0.4);
        }

        .navbar-nav .nav-link {
            color: #3b82f6;
            font-weight: 500;
            margin: 0 4px;
            border-radius: 8px;
            transition: all 0.3s ease;
            padding: 8px 12px;
        }

            .navbar-nav .nav-link:hover {
                background-color: rgba(142, 45, 226, 0.5);
                color: #ffffff;
                transform: translateY(-2px);
            }

            .navbar-nav .nav-link.active {
                background: linear-gradient(90deg, #4A00E0, #8E2DE2);
                color: #fff !important;
                font-weight: 600;
            }

        .navbar-brand span {
            color: #4A00E0;
            letter-spacing: 0.5px;
        }

        .btn-gradient:hover {
            transform: translateY(-3px);
        }
    </style>
</head>
<body>
    <!-- Header / Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm navbar-gradient">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/images/Learnify-logo.png" alt="Learnify" width="40" height="40" class="me-2" />
                    <span class="fw-bold fs-5">Learnify</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item @(IsActive("Home", "Index"))">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item @(IsActive("MenuItems", "Index"))">
                            <a class="nav-link" asp-controller="MenuItems" asp-action="Index">Menu</a>
                        </li>

                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item @(IsActive("Orders", "OrderedList"))">
                                <a class="nav-link" asp-controller="Orders" asp-action="OrderedList">Ordered List</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item @(IsActive("Home", "AboutUs"))">
                                <a class="nav-link" asp-controller="Home" asp-action="AboutUs">About Us</a>
                            </li>
                        }

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item me-2 @(IsActive("Account", "Profile"))">
                                <a class="btn btn-primary nav-link text-white" asp-controller="Account" asp-action="Profile">Profile</a>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger nav-link">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-2 @(IsActive("Account", "Login"))">
                                <a class="btn btn-success nav-link text-white" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item @(IsActive("Account", "Register"))">
                                <a class="btn btn-outline-primary nav-link" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Must have RenderBody() in ASP.NET Core MVC -->
    @RenderBody()

    <!-- Footer -->
    <footer class="border-top footer text-muted mt-3">
        <div class="container text-center py-2 small">
            &copy; @DateTime.Now.Year - Learnify. All Rights Reserved.
            | <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    @functions {
        private string IsActive(string controller, string action)
        {
            var routeData = Context.GetRouteData();
            var currentController = routeData.Values["controller"]?.ToString() ?? "";
            var currentAction = routeData.Values["action"]?.ToString() ?? "";

            if (string.Equals(controller, currentController, StringComparison.OrdinalIgnoreCase) &&
            string.Equals(action, currentAction, StringComparison.OrdinalIgnoreCase))
            {
                return "active";
            }
            return "";
        }
    }
</body>
</html>
